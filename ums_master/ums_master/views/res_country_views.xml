<?xml version="1.0" encoding="utf-8"?>
<odoo>

                <record id="view_res_country_form" model="ir.ui.view">
                    <field name="name">res.country.form</field>
                    <field name="model">res.country</field>
                    <field name="arch" type="xml">
                        <form string="Res Country">
                            <sheet>
                                <group>
                                    <group>
                                        <field name='code'/>
                                        <field name='name'/>
                                        <field name='abbr_name'/>
                                    </group>
                                    <group>
                                        <field name='note'/>
                                        <field name='phone_code'/>
                                        <field name='state_ids'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </record>
            
    <record id="view_res_country_tree" model="ir.ui.view">
        <field name="name">res.country.tree</field>
        <field name="model">res.country</field>
        <field name="arch" type="xml">
            <tree string="Res Country">
                <field name='code'/>
                <field name='name'/>
                <field name='abbr_name'/>
            </tree>
        </field>
    </record>

    <record id="view_res_country_search" model="ir.ui.view">
        <field name="name">res.country.search</field>
        <field name="model">res.country</field>
        <field name="arch" type="xml">
            <search string="Res Country">
                <field name='code'/>
                <field name='name'/>
            </search>
        </field>
    </record>

    <record id="action_res_country" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Res Country</field>
        <field name="res_model">res.country</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_res_country_search"/>
    </record>


<menuitem id="menu_res_country" parent="menu_ums_geo" name="Country" action="action_res_country"/>
</odoo>